<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart=".25dp"
    android:layout_marginEnd=".25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="60dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="#30e4e4e4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cardTime_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12a"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="8dp"
                android:layout_marginTop="2dp"
                android:textColor="#b1b1b1"/>

            <TextView
                android:id="@+id/cardTemp_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="serif"
                android:text="73Â°"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#CF000000"/>



            <ImageView
                android:id="@+id/cardHourlyIcon_imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_sunny"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/cardPrecip_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="serif"
                android:text="35%"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textStyle="bold"
                android:textColor="#2e97f2"
                />

        </LinearLayout>



    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>