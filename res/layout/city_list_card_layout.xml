<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart=".25dp"
    android:layout_marginEnd=".25dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="#30e4e4e4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/favorite_imageButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_star_border"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/cityName_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:fontFamily="@font/fira_sans_condensed_medium"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Summerville, SC"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/movable_imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_delete" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>