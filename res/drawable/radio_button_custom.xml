<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="#FFFFFF"
                />
            <padding
                android:left="3dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="0dp"
                />
            <size
                android:width="45dp"
                android:height="25dp"
                />
            <stroke
                android:width="1dp"
                android:color="#c2000000"
                />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <solid
                android:color="#FFFFFF"
                />
            <padding
                android:left="3dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="0dp"
                />
            <size
                android:width="45dp"
                android:height="25dp"
                />
            <stroke
                android:width="1dp"
                android:color="#c7c7c7"
                />
        </shape>
    </item>
</selector>